{
  "include": [
    "src", "server"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom",
    ],
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmit": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "Assets/*": [
        "src/Assets/*"
      ],
      "Components": [
        "src/Components/index"
      ],
      "Components/*": [
        "src/Components/*"
      ],
      "Utils": [
        "src/Utils/index"
      ],
      "Utils/*": [
        "src/Utils/*"
      ],
    }
  }
}